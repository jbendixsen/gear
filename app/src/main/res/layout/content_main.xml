<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <fragment
        android:id="@+id/fragment_main"
        layout="@layout/fragment_main"
        tools:layout="@layout/fragment_main"
        android:name="com.westcoastcode.gear.fragments.MainFragment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <fragment
        android:id="@+id/fragment_rpm"
        layout="@layout/fragment_rpm"
        android:name="com.westcoastcode.gear.fragments.RpmFragment"
        tools:layout="@layout/fragment_rpm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />


</LinearLayout>
